# Enable the rewrite engine
RewriteEngine On

# Set the base directory if your project is in a subdirectory
RewriteBase /

# Redirect all requests to src/index.html if the file or directory does not exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /src/index.html [L]

# Serve static assets directly from the dist directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^dist/(.*)$ /dist/$1 [L]
